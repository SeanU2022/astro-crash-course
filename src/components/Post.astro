---
import {type CollectionEntry, getEntryBySlug} from "astro:content"
import {Image} from "astro:assets"

type Props = {
    post: CollectionEntry<"posts">
}

const {post} = Astro.props
---

<!-- width={600}
height={600 / 1.5} -->
<!-- class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover" -->

<article>
    <a href={`/blog/${post.slug}`}>
        <Image
            src={post.data.image}
            width={1024}
            height={1024 / 1.5}
            alt={post.data.title}
            class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover"
            format="webp"
        />
    </a>
    <a
        href={`/blog/${post.slug}`}
        class="text-4xl text-zinc-900 mb-4 font-semibold inline-block"
    >
        {post.data.title}
    </a>

    <p class="text-zinc-500 text-2xl mb-9 line-clamp-2">
        {post.body}
    </p>

</article>